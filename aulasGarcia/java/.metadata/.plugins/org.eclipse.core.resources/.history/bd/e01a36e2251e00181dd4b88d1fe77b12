
public class Pessoa {
	String nome;
	String sexo;
	int idade;
	boolean vegetariana;
	float qtdCarne;
	
	void pessoa(String nome, String sexo, int idade, boolean vegetariana) {
		
		this.nome = nome;
		this.sexo = sexo;
		this.idade = idade;
		this.vegetariana = vegetariana;
	}
	
	public double verificarConsumo(){
			
			if((idade >= 0 && idade<= 3) ){
				System.out.println("Pois é! Este grupo de pessoas não consomem carne!");
			}else if(idade >=4 && idade <=12){					
				this.qtdCarne = this.qtdCarne + 1;
			}else {			
				this.qtdCarne = this.qtdCarne + 2;
			}
			return this.qtdCarne;
	}
	
}
