
public class Churrasco  {
	
	double qtdCarne;
	
double verificarConsumo(int idade, boolean vegetariana){
		
		if((idade < 4 || vegetariana == true) ){
			qtdCarne = 0;
		}else if(idade < 13){					
			qtdCarne++;
		}else {			
			qtdCarne=+2;
		}
		return qtdCarne;
	}
	

	/*
